<Application x:Class="TemperatureMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TemperatureMonitor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Steel.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <AlternationConverter x:Key="IndexToColor">
                <SolidColorBrush>#FF1B9E77</SolidColorBrush>
                <SolidColorBrush>#FFD95F02</SolidColorBrush>
                <SolidColorBrush>#FF7570B3</SolidColorBrush>
                <SolidColorBrush>#FFE7298A</SolidColorBrush>
                <SolidColorBrush>#FF66A61E</SolidColorBrush>
            </AlternationConverter>
        </ResourceDictionary>
    </Application.Resources>
</Application>
