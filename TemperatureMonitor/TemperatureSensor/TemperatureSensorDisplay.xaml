        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <GroupBox Header="{Binding Title, ElementName=self}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding}" />
                        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Black" CornerRadius="4" Background="{Binding Index, ElementName=self, Converter={StaticResource IndexToColor}}" Width="15" Height="15" />
                    </Grid>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Margin="15 0 15 0">
                <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="/TemperatureMonitor;component/Fonts/#DSEG7 Classic" Foreground="#0AFFFFFF" Text="888" />
                <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/TemperatureMonitor;component/Fonts/#DSEG7 Classic" FontSize="48" Foreground="LightGreen" Text="{Binding CurrentTemperature, Converter={local:TemperatureFormatConverter}}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
